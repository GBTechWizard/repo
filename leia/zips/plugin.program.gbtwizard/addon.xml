<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<addon id="plugin.program.gbtwizard" name="GBTech Wizard" version="1.4.8" provider-name="GBTech">
    <requires>
        <import addon="xbmc.python" version="2.1.0" />
        <import addon="script.module.requests" />
        <import addon="script.module.six" />
    </requires>
    
    <extension point="xbmc.python.pluginsource" library="default.py">
        <provides>executable</provides>
    </extension>
    
    <extension point="xbmc.service" library="startup.py" start="startup" />
    
    <extension point="xbmc.addon.metadata">
    <summary lang="en">GBTech Wizard</summary>
    <description lang="en">GBTech Wizard allows you to get access to the latest GBTech Custom Builds and Addons.</description>
        <platform>all</platform>
        <reuselanguageinvoker>false</reuselanguageinvoker>
        <source>https://github.com/GBTechWizard/repo/</source>
        <assets>
            <icon>icon.png</icon>
            <fanart>fanart.png</fanart>
        </assets>
    </extension>
</addon>
